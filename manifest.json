{
  "name": "Video No Paused",
  "version": "1.0",
  "manifest_version": 2,
  "description": "视频暂停后自动播放",
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "/images/get_started16.png",
    "32": "/images/get_started32.png",
    "48": "/images/get_started48.png",
    "128": "/images/get_started128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "/images/get_started16.png",
      "32": "/images/get_started32.png",
      "48": "/images/get_started48.png",
      "128": "/images/get_started128.png"
    }
  },
  "permissions": ["tabs", "http://*/*", "https://*/*"]
}
